{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@main/components/*": ["src/main/components/*"],
      "@main/hocs/*": ["src/main/hocs/*"],
      "@main/interfaces/*": ["src/main/interfaces/*"],
      "@main/utils/*": ["src/main/utils/*"],
      "@main/themes/*": ["src/main/themes/*"],
      "@forms/components/*": ["src/forms/components/*"],
      "@forms/hocs/*": ["src/forms/hocs/*"],
      "@forms/hooks/*": ["src/forms/hooks/*"],
      "@forms/interfaces/*": ["src/forms/interfaces/*"],
      "@forms/lib/*": ["src/forms/lib/*"],
      "@forms/utils/*": ["src/forms/utils/*"],
      "@i18next/*": ["src/i18next/*"],
      "@syntax-highlighter/*": ["src/syntax-highlighter/*"]
    },
    "types": ["vite/client", "@types/jest"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
